<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/img_my_score"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="오늘의 로또 번호!"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/one_mobile_pop"
        android:paddingBottom="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img_ball1"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3"
        android:background="@drawable/scoreboard2" />
    <TextView
        android:id="@+id/img_ball1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="_?_"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/lottery_ball"
        app:layout_constraintTop_toBottomOf="@+id/img_my_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_ball2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/img_ball2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="_?_"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/lottery_ball"
        app:layout_constraintTop_toTopOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="@+id/img_ball1"
        app:layout_constraintLeft_toRightOf="@+id/img_ball1"
        app:layout_constraintRight_toLeftOf="@+id/img_ball3"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/img_ball3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="_?_"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/lottery_ball"
        app:layout_constraintTop_toTopOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="@+id/img_ball1"
        app:layout_constraintLeft_toRightOf="@+id/img_ball2"
        app:layout_constraintRight_toLeftOf="@+id/img_ball4"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/img_ball4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="_?_"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/lottery_ball"
        app:layout_constraintTop_toTopOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="@+id/img_ball1"
        app:layout_constraintLeft_toRightOf="@+id/img_ball3"
        app:layout_constraintRight_toLeftOf="@+id/img_ball5"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/img_ball5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="_?_"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/lottery_ball"
        app:layout_constraintTop_toTopOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="@+id/img_ball1"
        app:layout_constraintLeft_toRightOf="@+id/img_ball4"
        app:layout_constraintRight_toLeftOf="@+id/img_ball6"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/img_ball6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="_?_"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/lottery_ball"
        app:layout_constraintTop_toTopOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="@+id/img_ball1"
        app:layout_constraintLeft_toRightOf="@+id/img_ball5"
        app:layout_constraintRight_toLeftOf="@+id/img_add"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/img_plus"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="@+id/img_ball1"
        app:layout_constraintLeft_toRightOf="@+id/img_ball6"
        app:layout_constraintRight_toLeftOf="@+id/img_ball7"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/img_ball7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="_?_"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:gravity="center"
        android:padding="1dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:background="@drawable/lottery_ball_bonus"
        app:layout_constraintTop_toTopOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="@+id/img_ball1"
        app:layout_constraintLeft_toRightOf="@+id/img_add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_char"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_speech"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:src="@drawable/char_win" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_speech"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img_ball1"
        app:layout_constraintBottom_toTopOf="@+id/img_money"
        app:layout_constraintLeft_toRightOf="@+id/img_char"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:src="@drawable/speech_bubble_win" />

    <TextView
        android:id="@+id/txt_speech"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="저건 다 내돈이다!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:fontFamily="@font/one_mobile_pop"
        app:layout_constraintTop_toTopOf="@+id/img_speech"
        app:layout_constraintLeft_toLeftOf="@+id/img_speech"
        app:layout_constraintRight_toRightOf="@+id/img_speech"
        app:layout_constraintBottom_toBottomOf="@+id/img_speech" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_money"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img_ball1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:src="@drawable/moneytower" />

</androidx.constraintlayout.widget.ConstraintLayout>